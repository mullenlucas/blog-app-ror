<div>
  <section class="users-ul">
    <div class="users-li">
    <div><%= image_tag @user.photo %></div>
    <div class="user-info">
      <h2><a><%= @user.name %></a></h2>
      <p>Number of posts:<%= @user.posts_counter %></p>
    </div>
    </div>
  </section>

  <section class="user-data">
    <h2>Bio</h2>
    <p><%= @user.bio %></p>
  </section>

  <section>
   <ul class="users-ul">
     <% @user.posts.each do |post| %>
       <li class="user-data">
         <h3>Post <%='#'%><%= post.id %></h3>
         <p><%= post.text %></p>
        <div class="lk-cm">
         <span>Comments: <%= post.comments_counter %></span>
         <span>Likes: <%= post.likes_counter %></span>
        </div>
       </li>
     <% end %>
   </ul>
   
  </section>
  <button>See all posts</button>
</div>
