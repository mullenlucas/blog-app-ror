<section>

<div class="users-header">
  <h2>Users list</h2>
</div>

<ul class="users-ul">
  <% @users.each do |user| %>
  <li class="users-li">
    <div><%= image_tag user.photo %></div>
    <div class="user-info">
      <h2><a><%= user.name %></a></h2>
      <p>Number of posts:<%= user.posts_counter %></p>
    </div>
  </li>
<% end %>
</ul>

</section>