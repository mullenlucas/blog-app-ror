<main>
  <h2 id="users-title">Users</h2>

  <ul class="users-ul">
    <% @users.each do |user| %>
      <%= link_to user_path(user.id) do %>
        <li class="user-card">
          <div class="user-image"><%= image_tag user.photo %></div>
          <div class="card-details">
            <h3><%= user.name %></h3>
            <span>Number of posts: <%= user.posts_counter %></span>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</main>